<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:padding="20dp"
    tools:context="br.unicap.c3.pwm.sobre.RonnyScreen">
    <androidx.cardview.widget.CardView
        android:id="@+id/ronny_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5C5493"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ronny_icon"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/ronny"
                android:elevation="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ronny Ribeiro"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Tenho uma experiência de quase 2 anos, no mundo da programação. Minha especialidade é criar websites, criação de bots, personalização de sites, e muito mais..."
                android:textColor="@color/subtext"
                android:textSize="20sp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>